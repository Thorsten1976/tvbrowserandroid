<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<ListPreference android:key="@string/PREF_WIDGET_CHANNEL_LOGO_NAME"
		android:title="@string/show_logo_title"
		android:defaultValue="@string/pref_widget_channel_logo_name_default"
		android:entries="@array/show_logo_long"
		android:entryValues="@array/pref_simple_string_value_array4"
		android:summary="%s"/>
	<CheckBoxPreference android:key="@string/PREF_WIDGET_SHOW_SORT_NUMBER" 
		android:title="@string/show_sort_number"
		android:defaultValue="@bool/pref_widget_show_sort_number_default"/>
	<CheckBoxPreference android:key="@string/PREF_WIDGET_CLICK_TO_CHANNEL_TO_LIST" 
		android:title="@string/pref_program_lists_show_list_on_channel_click"
		android:summary="@string/pref_program_lists_show_list_on_channel_click_summary"
		android:defaultValue="@bool/pref_widget_click_to_channel_to_list_default"/>
	<CheckBoxPreference android:key="@string/PREF_WIDGET_SHOW_EPISODE" 
		android:title="@string/pref_show_episode"
		android:defaultValue="@bool/pref_widget_show_episode_default"/>
	<ListPreference android:key="@string/PREF_WIDGET_TEXT_SCALE"
		android:title="@string/pref_detail_text_scale"
		android:defaultValue="@string/pref_widget_text_scale_default"
		android:entries="@array/program_text_scale_names"
		android:entryValues="@array/program_text_scale_value"
		android:summary="%s"/>
</PreferenceScreen>
