<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp" >
    <CheckBox
        android:id="@+id/dialog_favorite_selection_id_selection_duration_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edit_favorite_font_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/activity_edit_favorite_selection_text_duration_minimum"/>
    <TimePicker
        android:id="@+id/dialog_favorite_selection_id_input_duration_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_favorite_selection_id_selection_duration_minimum"
        />
    <CheckBox
        android:id="@+id/dialog_favorite_selection_id_selection_duration_maximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edit_favorite_font_size"
        android:text="@string/activity_edit_favorite_selection_text_duration_maximum"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_favorite_selection_id_input_duration_minimum"/>
    <TimePicker
        android:id="@+id/dialog_favorite_selection_id_input_duration_maximum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_favorite_selection_id_selection_duration_maximum"/>
</RelativeLayout>
</ScrollView>