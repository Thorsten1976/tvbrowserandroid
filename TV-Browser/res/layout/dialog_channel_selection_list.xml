<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@id/channel_selection_label_id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/edit_favorite_font_size"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/channel_selection_label_text_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_alignBaseline="@id/channel_selection_input_id_name"/>
    <EditText
        android:id="@id/channel_selection_input_id_name"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/edit_favorite_font_size"
        android:hint="@string/channel_selection_input_name_hint"
        android:layout_toRightOf="@id/channel_selection_label_id_name"
        android:layout_toEndOf="@id/channel_selection_label_id_name"
        android:layout_marginBottom="5dp"
        android:inputType="textMultiLine"/>
    <TextView android:id="@id/channel_country_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_channel_country"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@id/channel_country_value"
        android:layout_below="@id/channel_selection_label_id_name"
    />
	<include
		layout="@layout/compat_spinner"
		android:id="@id/channel_country_value"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/channel_category_label"
        android:layout_toRightOf="@id/channel_category_label"
        android:layout_below="@id/channel_selection_label_id_name"
    />
    <TextView android:id="@id/channel_category_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_channel_category"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/channel_country_value"
        android:layout_alignBaseline="@id/channel_category_value"
    />
	<include
		layout="@layout/compat_spinner"
		android:id="@id/channel_category_value"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/channel_category_label"
        android:layout_toRightOf="@id/channel_category_label"
        android:layout_below="@id/channel_country_value"
    />
    <LinearLayout
        android:id="@id/channel_selection_selection_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/channel_category_value"
        style="?android:attr/buttonBarStyle">
        <Button
	        android:id="@id/channel_selection_select_all"
	        android:layout_marginTop="5dp"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:text="@string/channel_selection_select_all"
	        style="?android:attr/buttonBarButtonStyle"
	        />
        <Button
	        android:id="@id/channel_selection_remove_selection"
	        android:layout_marginTop="5dp"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:text="@string/channel_selection_remove_selection"
	        style="?android:attr/buttonBarButtonStyle"
	        />
    </LinearLayout>
    <ListView android:id="@id/channel_selection_list"
        android:layout_marginTop="5dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/channel_selection_selection_buttons"
	    android:choiceMode="multipleChoice"
	    android:clickable="true"
		android:focusable="true" />
</RelativeLayout>
