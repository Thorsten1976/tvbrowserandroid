<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView android:id="@+id/channel_sort_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/channel_selection_help"
        android:gravity="center_horizontal"/>
	<Button android:id="@+id/channel_sort_alpabetically"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/sort_alphabetically"/>
    <com.example.android.listviewdragginganimation.DynamicListView 
    	android:id="@+id/channel_sort"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
	</com.example.android.listviewdragginganimation.DynamicListView>
</LinearLayout>