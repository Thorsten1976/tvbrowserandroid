<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:paddingStart="5dp"
    android:gravity="top"
    android:paddingLeft="5dp"
    android:paddingEnd="5dp"
    android:paddingRight="5dp">
    <LinearLayout android:id="@+id/row_suggestion_channel"
        android:layout_width="92dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">
        <ImageView
            android:id="@+id/row_suggestion_channel_row_logo"
            android:layout_width="92dp"
            android:scaleType="center"
            android:contentDescription="@string/channel_logo_content_description"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/row_suggestion_channel_name"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_font_size"
            android:gravity="center_horizontal"
            android:textColor="@color/lighter_gray"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_toRightOf="@id/row_suggestion_channel"
        android:layout_toEndOf="@id/row_suggestion_channel"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <ProgressBar
            android:id="@+id/row_suggestion_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            />
        <TextView
            android:layout_below="@id/row_suggestion_progress"
            android:id="@+id/row_suggestion_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/title_font_size"
            android:textColor="@color/lighter_gray"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_below="@id/row_suggestion_date"
            android:id="@+id/row_suggestion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"
            android:textColor="#fff"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_below="@id/row_suggestion_date"
            android:layout_toRightOf="@id/row_suggestion_time"
            android:layout_toEndOf="@id/row_suggestion_time"
            android:layout_alignTop="@id/row_suggestion_time"
            android:id="@+id/row_suggestion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold"
            android:textColor="#fff"
            android:clickable="false"
            android:focusable="false"
            />
        <TextView
            android:layout_toRightOf="@id/row_suggestion_time"
            android:layout_toEndOf="@id/row_suggestion_time"
            android:layout_below="@id/row_suggestion_title"
            android:id="@+id/row_suggestion_episode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="italic"
            android:textSize="@dimen/episode_font_size"
            android:textColor="@color/lighter_gray"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>


</RelativeLayout>

    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>