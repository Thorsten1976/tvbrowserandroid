        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_production_firm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_age_limit_string"
        android:layout_width="match_parent"
