        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_repetition_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_music"
        android:layout_width="match_parent"
