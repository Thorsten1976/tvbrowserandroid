        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_repetition_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DetailDialogEntry" />
    <TextView
        android:id="@id/detail_producer"
        android:layout_width="match_parent"
